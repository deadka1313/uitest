.button
    font-family 'Conv_Lato-Black'
    cursor pointer
    border-radius 3px
    color #ffffff
    margin-bottom 3px
    outline none    
    &:disabled
        background-color #ffffff
    &__size        
        &-small
            width 78px
            height 24px     
            font-size 10px       
        &-normal
            width 118px
            height 35px
            font-size 12px
            
    &__color
        &-blue
            background-color #4eb7a8
            border 1px solid #4eb7a8            
            &:disabled
                background-color #ffffff
                color #4eb7a8
        &-red
            background-color #e75735
            border 1px solid #e75735              
            &:disabled
                background-color #ffffff
                color #e75735