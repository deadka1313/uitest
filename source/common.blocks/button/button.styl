.button
    font-family 'Conv_Lato-Black'
    letter-spacing 0.5px
    cursor pointer
    border-radius 3px
    color #ffffff
    margin-bottom 3px
    outline none    
    overflow hidden
    position relative
    &:disabled
        background-color #ffffff
    &__size        
        &-small
            width 78px
            height 22px     
            font-size 10px   
            line-height 22px  
        &-normal
            width 118px
            height 32px
            font-size 12px 
            line-height 30px          
            
    &__color
        &-blue
            background-color blueColor
            border 1px solid blueColor         
            &:disabled
                background-color #ffffff
                color blueColor
                box-shadow 0 3px 0 blueColor  

        &-blue:disabled.button__size-small            
            box-shadow 0 2px 0 blueColor  
        &-blue.button__size-small            
            box-shadow 0 2px 0 #28a290   
        &-blue.button__size-normal            
            box-shadow 0 3px 0 #28a290  
        &-blue:disabled.button__size-normal            
            box-shadow 0 3px 0 blueColor  

        &-red
            background-color redColor
            border 1px solid redColor  
            box-shadow 0 3px 0 #bf3e1f                
            &:disabled
                background-color #ffffff
                color redColor
                box-shadow 0 3px 0 redColor 

        &-red.button__size-small            
            box-shadow 0 2px 0 #bf3e1f  
        &-red:disabled.button__size-small            
            box-shadow 0 2px 0 redColor   
        &-red.button__size-normal            
            box-shadow 0 3px 0 #bf3e1f  
        &-red:disabled.button__size-normal           
            box-shadow 0 3px 0 redColor    

    &:active.button__size-small
        box-shadow none
        transform translateY(2px)

    &:active.button__size-normal
        box-shadow none
        transform translateY(3px)

.button .ripple
    border-radius 50%
    background-color rgba(255, 255, 255, 0.5)
    position absolute
    transform scale(0)
    animation ripple 0.6s linear

@keyframes ripple
    to 
        transform scale(2.5)
        opacity 0