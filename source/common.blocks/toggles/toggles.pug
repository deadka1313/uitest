mixin toggles(nameTog,checked,disabled)
  .onoffswitch
    if disabled == 'disabled'    
      if checked == 'cheked'   
        input(type="checkbox" name=""+nameTog id=""+nameTog disabled="disabled" class="onoffswitch-checkbox" autocomplete="off" checked="checked")
      else      
        input(type="checkbox" name=""+nameTog id=""+nameTog disabled="disabled" class="onoffswitch-checkbox" autocomplete="off")
    else    
      if checked == 'cheked'    
        input(type="checkbox" name=""+nameTog id=""+nameTog  class="onoffswitch-checkbox" autocomplete="off" checked="checked")
      else      
        input(type="checkbox" name=""+nameTog id=""+nameTog  class="onoffswitch-checkbox" autocomplete="off")
    label(for=""+nameTog class="onoffswitch-label")
      span(class="onoffswitch-inner")
      span(class="onoffswitch-switch")