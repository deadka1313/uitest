.onoffswitch 
    position: relative 
    width: 59px
    -webkit-user-select:none 
    -moz-user-select:none 
    -ms-user-select: none

.onoffswitch-checkbox 
    display: none

.onoffswitch-label 
    display: block 
    overflow: hidden 
    cursor: pointer 
    border-radius: 25px

.onoffswitch-inner 
    display: block 
    width: 200% 
    margin-left: -100%
    transition: margin 0s ease-in 0s

.onoffswitch-inner:before, .onoffswitch-inner:after 
    display: block 
    float: left 
    width: 50% 
    height: 24px 
    padding: 0 
    line-height: 24px
    font-size: 12px 
    color: white 
    box-sizing: border-box

.onoffswitch-inner:before 
    content: "ON"
    padding-left: 10px
    background-color: #4EB7A8 
    color: #FFFFFF

.onoffswitch-inner:after 
    content: "OFF"
    padding-right: 7px
    background-color: #e5e5e5 
    color: #999999
    text-align: right

.onoffswitch-switch 
    display: block 
    width: 18px 
    margin: 3px
    background: #FFFFFF
    position: absolute 
    top: 0 
    bottom: 0
    right: 31px 
    border-radius: 50%
    transition: all 0.2s ease-in 0s 

.onoffswitch-checkbox:checked + .onoffswitch-label .onoffswitch-inner 
    margin-left: 0

.onoffswitch-checkbox:checked + .onoffswitch-label .onoffswitch-switch 
    right: 0px 
