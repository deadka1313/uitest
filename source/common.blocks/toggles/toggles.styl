.toggles-switch 
  &[type=checkbox]
    height: 0
    width: 0
    visibility: hidden


  &_label 
    cursor: pointer
    width: 60px
    height: 24px
    background: greyColor
    display: block
    border-radius: 15px
    position: relative
    margin: 0


  &_label:after 
    content: ''
    position: absolute
    top: 2px
    left: 3px
    width: 20px
    height: 20px
    background: #fff
    border-radius: 50%
    transition: 0.3s

  &_label:before    
    font-size: 12px 
    color white    
    content: 'OFF'
    position: absolute
    top: 6px
    left: 24px

  &:checked + .toggles-switch_label 
    background: blueColor


  &:checked + .toggles-switch_label:after 
    content: ''
    left: calc(100% - 3px)
    transform: translateX(-100%)
  &:checked + .toggles-switch_label:before 
    content: 'ON'   
    transform: translateX(-13px)


