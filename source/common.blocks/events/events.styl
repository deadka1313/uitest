@import '../button/button.styl'

.events
  background-color blueColor
  border-radius 4px
  color white
  display flex
  flex-direction row

  &_content    
    padding 7px 15px 24px 17px
  
  &_date
    font-family 'Conv_Lato-Light'
    margin-bottom 12.5px
    &__day
      display inline-block
      letter-spacing -4px
      font-size 73px
      margin-right 14px
    &__months
      font-size 30px
      display inline-block
      letter-spacing 0px

  &_title
    font-size 12px
    letter-spacing 0.9px
    font-family 'Conv_Lato-Black'
    margin-left 3px
    margin-bottom 3px

  &_text
    font-family LatoRegular
    font-size 11.4px
    letter-spacing 0.4px
    line-height 13.5px
    margin-left 4px
    margin-bottom 18px
  & button 
    margin-left 15px